@model Furniture_Shop.ViewModels.RegisterModel.RegisterModel
@{
    ViewBag.Title = "Login";
}

<div class="row align-content-center">
    <h3>Register:</h3>
    <form asp-controller="Account" asp-action="Register" method="post" class="formhorizontal" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <div class="col-md-5">
                <input asp-for="Username" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="col-md-5">
                <input asp-for="Password" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RepeatPassword"></label>
            <div class="col-md-5">
                <input asp-for="RepeatPassword" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <div class="col-md-5">
                <input asp-for="RememberMe"/>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Register"/>
    </form>
</div>