@model Order
<div class="row">
    <h3>Checkout</h3>
    <form asp-action="Checkout" method="post" class="formhorizontal">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="textdanger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <div class="col-md-5">
                <input asp-for="Surname" class="form-control"/>
                <span asp-validation-for="Surname" class="textdanger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <div class="col-md-5">
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address" class="textdanger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <div class="col-md-5">
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="textdanger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="textdanger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Complete"/>
    </form>
</div>